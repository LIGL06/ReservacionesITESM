            i.fa.fa-circle.fa-stack-2x.text-primary
            i.fa.fa-smile-o.fa-stack-1x.fa-inverse
          h4.service-heading Calidad
        div.col-md-2
          span.fa-stack.fa-4x
            i.fa.fa-circle.fa-stack-2x.text-primary
            i.fa.fa-phone.fa-stack-1x.fa-inverse
